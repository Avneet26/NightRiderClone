<%- include("header.ejs") %>
<body>
    <%- include("navbar.ejs") %>
    <div class="add-job-page bg-gray pt-4 pb-4">
        <div class="page-heading container bg-white rounded p-3 text-primary ">
            <strong>UPDATE WORKER</strong>
        </div>
        <div class="page-heading container bg-white rounded p-3 mt-5">
            <form id="Add-Job" action="">
                <p class="text-secondary">Fields Marked with * are Mandatory</p>
                <div class="row mt-3">
                    <div class="col">
                        <label for="workerName" class="form-label">Name*</label>
                        <input type="text" class="form-control" id="workerName" required placeholder="Enter Name">                      
                    </div> 
                </div>
                <div class="row mt-3">
                    <div class="col">
                        <label for="workerEmail" class="form-label">Email*</label>
                        <input type="email" class="form-control" id="workerEmail" required placeholder="Enter a valid Email">                    
                    </div>
                </div>
                <div class="row mt-3">
                    <div class="col">
                        <label for="workerPhone" class="form-label">Phone*</label>
                        <input type="text" class="form-control" id="workerPhone" required placeholder="Enter Phone Number">                  
                    </div>
                </div>
                <div class="row mt-3">
                    <div class="col">
                        <label for="workerAddress" class="form-label">Address*</label>
                        <input type="text" class="form-control" id="workerAddress" required placeholder="Enter Address">
                    </div>
                </div>
                <div class="mt-5">
                    <input id="worker-update" type="button" value="Update" class="btn btn-warning">
                </div>
            </form>
        </div>
    </div>
<%- include("footer.ejs") %>